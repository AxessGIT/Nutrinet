    function onChange(args) {
        //args contains entire model of DatePicker to get the value of all properties.

        //alert popup shows the previous date and selected date.
        //alert(" La Fecha Anterior Es : " + args.prevDate + " \n La Fecha Seleccionada Es : " + args.value);

        //Obtiene el texto actual
        var Texto = $("#txtHistoria").val();

        //Agrega la nueva fecha
        Texto = "Fecha Consulta: " + args.value + " \n" + " \n" + Texto;

        //Agrega el texto final
        $("#txtHistoria").val(Texto);
    }     
</script>