@model NutrinetSync.ModeloSys.historias

@{
    ViewBag.Title = "Historia del Paciente";
}

<h2>Historia del Paciente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.historiaid)

        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <div class="col-md-2">
                        Nombre del Paciente
                    </div>
                    <div class="col-md-8">
                        @ViewBag.NombreCompleto
                    </div>
                </div>
            </div>   
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-1">
                        Edad
                    </div>
                    <div class="col-md-5">
                        @ViewBag.Edad
                    </div>
                </div>
            </div>      
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-1">
                        Sexo
                    </div>
                    <div class="col-md-5">
                        @ViewBag.Sexo
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <div class="col-md-2">
                        Fecha de Consulta
                    </div>
                    <div class="col-md-8">
                        @Html.EJ().DatePicker("datePicker").Value(System.DateTime.Now).DateFormat("yyyy/MM/dd").Locale("es-MX").WatermarkText("Ingrese la Fecha").ButtonText("Hoy").ClientSideEvents(e => e.Change("onChange"))
                        @*@Html.EJ().DatePickerFor(DateTime.Now, new { htmlAttributes = new { @class = "form-control" } }).DateFormat("yyyy/MM/dd").Locale("es-MX").WatermarkText("Ingrese la Fecha").ButtonText("Hoy")*@
                    </div>
                </div>
            </div>
        </div>

        @* Fecha (Hoy) *@

        @* Peso (Kilogramos) *@

        @* Talla (Centimetros) *@

        <div class="col-md-10">
            <div class="form-group">
                @*<div class="control-label col-md-4">
                    Notas
                </div>*@
                <p>Notas</p>
                @*@Html.EditorFor(model => model.historia, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextAreaFor(model => model.historia, new { @class = "form-control", @cols = 100, @rows = 10, id = "txtHistoria" })
                @Html.ValidationMessageFor(model => model.historia, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="row">
            <div class="col-md-4">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<br />

<div>
    @Html.ActionLink("< Volver al Paciente", "Informacion", new { id = Model.pacienteid })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

